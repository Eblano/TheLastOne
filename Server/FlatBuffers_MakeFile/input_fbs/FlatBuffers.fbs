// Example IDL file for our monster's schema.

namespace Game.TheLastOne;

struct Vec3 {
  x:float;
  y:float;
  z:float;
}

table Client_Collection{
  data:[Client_info];
}

table Client_info {
  id:int;
  hp:int;
  animator:int;
  Horizontal:float;
  Vertical:float;
  inCar:int;
  name:string;
  position:Vec3;
  rotation:Vec3;
  carrotation:Vec3;
  nowWeapon:int;
}

table Zombie_Collection{
  data:[Zombie_info];
}

table Zombie_info {
  id:int;
  hp:int;
  animator:int;
  targetPlayer:int;
  position:Vec3;
  rotation:Vec3;
}

table Game_Items{
  data:[Gameitem];
}

table Gameitem{
  id:int;
  name:string;
  position:Vec3;
  rotation:Vec3;
  eat:bool;
  kind:int;
}

table GameDangerLine{
  demage:int;
  position:Vec3;
  scale:Vec3;
}

table Game_Timer {
  kind:int;
  time:int;
}

table Client_id {
  id:int;
}

table Client_Shot_info {
  id:int;
}
